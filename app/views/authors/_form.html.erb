<%= form_with(model: author, local: true) do |form| %>
  <div class="field">
    <%= form.label :name, t("views.authors.name") %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :bio, t("views.authors.bio") %>
    <%= form.text_area :bio %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
